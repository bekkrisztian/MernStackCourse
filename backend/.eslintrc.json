{
    "env": {
        "browser": true,
        "es2016": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["warn", "always"],
        "quotes": ["warn", "double"],
        "comma-spacing": ["warn", { "before": false, "after": true }]
    }
}